rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Recipes collection
    match /recipes/{recipeId} {
      // Everyone can read recipes (public website)
      allow read: if true;
      
      // Only allow writes if the request includes the admin password
      // This is checked in your admin dashboard before making requests
      allow create, update, delete: if request.auth != null;
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Everyone can read categories (public website)
      allow read: if true;
      
      // Only allow writes if authenticated
      allow create, update, delete: if request.auth != null;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
